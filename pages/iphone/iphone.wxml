 <form bindsubmit="formSubmit">
  <view class="user">
    <view class="hr"></view>
     <view class="item">
       <input type="text" name="username" placeholder="请输入5-18位的用户名" bindblur="registerUserBlur" />
     </view>
     <view class="item">
      <input type="text" name="pwd" placeholder="请输入6-20位密码" bindblur="registerPasswordBlur" />
     </view>
     <view class="item">
      <input type="text" name="pwdAgain" placeholder="确认密码" bindblur="registerPasswordAgainBlur" />
     </view>
     <view class="item">
      <input type="text" name="comName"placeholder="请输入用户名称" bindblur="registerComNameBlur" />
     </view>
  </view>
  <view class="iphoneUserInfo">
    <view class="iphone">
      <input type="text" name="iphone" placeholder="请输入手机号" />
    </view>
      <view class="code" bindtap="GetVerificationCode">
        获取验证码
      </view>
    </view>
      <view class="item">
        <input type="text" name="code" placeholder="请输入短信验证码" />
      </view>
  <!--  -->
  <button class="registerBtn" type="primary" form-type="submit" style="width:90%">注册</button>
  <!--同意协议-->
<view>
  <view class="proctor">
    <icon type="success" color="red" size="18"></icon>
    <text class="agree">同意</text>
    <text class="options">用户注册协议</text>
  </view>
</view>
</form>
